<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      <!-- 第一个Tab中得layout -->
     <LinearLayout android:id="@+id/frist_tab_linearlayout"
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent"
       android:orientation="vertical">
    <ExpandableListView
        android:id="@+id/ll1_order_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/lightgrey"        
        android:dividerHeight="2dp"
         >
    </ExpandableListView>
   
  </LinearLayout>
  <!-- 第二个Tab中得layout -->
  <LinearLayout android:id="@+id/second_tab_linearlayout"
      android:layout_width="fill_parent" 
      android:layout_height="fill_parent"
      android:orientation="vertical" >
    <ExpandableListView
        android:id="@+id/ll2_order_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/lightgrey"        
        android:dividerHeight="2dp"
         />
  </LinearLayout>
 <!-- 第三个Tab中得layout -->
  <LinearLayout android:id="@+id/third_tab_linearlayout"
     android:layout_width="fill_parent" 
     android:layout_height="fill_parent"  
     android:orientation="vertical" >
    <ExpandableListView
        android:id="@+id/ll3_order_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/lightgrey"        
        android:dividerHeight="2dp"
         />
  </LinearLayout>
  <!-- 第四个Tab中得layout -->
  <LinearLayout android:id="@+id/four_tab_linearlayout"
     android:layout_width="fill_parent" 
     android:layout_height="fill_parent"     
     android:orientation="vertical" >
        <ExpandableListView
        android:id="@+id/ll4_order_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/lightgrey"        
        android:dividerHeight="2dp"
         />
  </LinearLayout>

</FrameLayout>
