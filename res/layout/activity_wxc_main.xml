<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".WxcMainActivity" >

    <fragment
        android:id="@+id/fragment_first"
        class="com.hbjr.washcheapp.fragment.WxcBottomFirFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
         android:layout_weight="1"
        />
    <fragment
        android:id="@+id/fragment_my"
        class="com.hbjr.washcheapp.fragment.WxcBottomMyFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
         android:layout_weight="1"
        />
    <fragment
        android:id="@+id/fragment_about"
        class="com.hbjr.washcheapp.fragment.WxcBottomAboutFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
         android:layout_weight="1"
        />           

     <com.hbjr.washcheapp.fragment.WxcBottomFragment 
         android:id="@+id/bottom_nav"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
       />
    
</LinearLayout>