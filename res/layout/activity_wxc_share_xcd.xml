<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
        
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

<LinearLayout
        android:id="@+id/ll_share_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" />   
  <LinearLayout
        android:id="@+id/ll_first_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:windowSoftInputMode="stateAlwaysHidden|adjustResize" 
        android:orientation="vertical"
  >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#00BFFF"        
        android:orientation="horizontal"
         >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="录入洗车店信息  >"
            android:textColor="@color/red" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="  拍照  >"
            android:textColor="@color/white" />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="  登录上传拿积分"
            android:textColor="@color/white" />
            
</LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" 
        android:orientation="vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:textColor="#00BFFF"
            android:textSize="20dp"
            android:text="录入洗车店信息 "/>
        
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#00BFFF" />

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"         
        android:focusable="true" 
        android:focusableInTouchMode="true">
        <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0dp" android:layout_height="0dp"/>        
         <EditText
            android:id="@+id/edt_share_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:lines="2"
            android:paddingLeft="12dp"
            android:background="@null"
            android:hint="洗车店名称 *"/>
    </RelativeLayout>
 <View style="@style/PersonalLine" />
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp" >
         <EditText
            android:id="@+id/edt_share_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:paddingLeft="12dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="洗车店地址*"/>
    </LinearLayout>
 <View style="@style/PersonalLine" />    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp" >
         <EditText
            android:id="@+id/edt_share_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:paddingLeft="12dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="联系方式(tel)"/>
    </LinearLayout>    
 <View style="@style/PersonalLine" />    
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp" >
         <EditText
            android:id="@+id/edt_share_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:paddingLeft="12dp"
            android:background="@null"
            android:ellipsize="end"            
            android:hint="营业时间"/>
    </LinearLayout> 
 <View style="@style/PersonalLine" />     
   
 <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="服务及价格"/>
   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp" 
        android:orientation="horizontal">
         <EditText
            android:id="@+id/edt_share_service1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"            
            android:lines="2"
            android:ems="15"
            android:paddingLeft="12dp"
            android:ellipsize="end"   
            android:textSize="14dp"         
            android:hint="洗车店服务（1）*"/>
          <TextView
            android:id="@+id/edt_share_service1_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service1_price"
            android:layout_centerVertical="true" 
            android:text="价格*"/>                  
         <EditText
            android:id="@+id/edt_share_service1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:lines="1"
            android:ems="2"
            android:paddingLeft="12dp" 
            android:inputType="number"
            android:hint=""/>     
      <TextView
            android:id="@+id/edt_share_service1_old_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service1_price_old"
            android:layout_centerVertical="true" 
            android:visibility="gone"
            android:text="老价 "/>                              
         <EditText
            android:id="@+id/edt_share_service1_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_centerInParent="true"  
            android:layout_alignParentRight="true"
            android:ems="2"                      
            android:lines="1"
            android:visibility="gone"            
            android:paddingLeft="12dp" 
            android:inputType="number"
            android:hint=""/>            
                  
    </RelativeLayout>
    
   
   
   
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp" 
        android:orientation="horizontal">
         <EditText
            android:id="@+id/edt_share_service2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"            
            android:lines="2"
            android:ems="15"
            android:paddingLeft="12dp"
            android:ellipsize="end"   
            android:textSize="14dp"         
            android:hint="洗车店服务（2）"/>
          <TextView
            android:id="@+id/edt_share_service2_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service2_price"
            android:layout_centerVertical="true" 
            android:text="价格  "/>                  
         <EditText
            android:id="@+id/edt_share_service2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service2_old_price_title"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"            
            android:layout_centerInParent="true"
            android:lines="1"
            android:ems="2"
            android:paddingLeft="12dp" 
            android:inputType="number"
            android:hint=""/>     
      <TextView
            android:id="@+id/edt_share_service2_old_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service2_price_old"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="老价 "/>                              
         <EditText
            android:id="@+id/edt_share_service2_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_centerInParent="true"  
            android:layout_alignParentRight="true"
            android:ems="2"                      
            android:lines="1"
            android:paddingLeft="12dp" 
            android:inputType="number"
            android:visibility="gone"            
            android:hint=""/>            
                  
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp" 
        android:orientation="horizontal">
         <EditText
            android:id="@+id/edt_share_service3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"            
            android:lines="2"
            android:ems="15"
            android:paddingLeft="12dp"
            android:ellipsize="end"   
            android:textSize="14dp"         
            android:hint="洗车店服务（3）"/>
          <TextView
            android:id="@+id/edt_share_service3_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service3_price"
            android:layout_centerVertical="true" 
            android:text="价格  "/>                  
         <EditText
            android:id="@+id/edt_share_service3_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service3_old_price_title"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"            
            android:lines="1"
            android:ems="2"
            android:paddingLeft="12dp" 
            android:inputType="number"
            android:hint=""/>     
      <TextView
            android:id="@+id/edt_share_service3_old_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_toLeftOf="@+id/edt_share_service3_price_old"
            android:layout_centerVertical="true"
           android:visibility="gone"
            android:text="老价 "/>                              
         <EditText
            android:id="@+id/edt_share_service3_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_centerInParent="true"  
            android:layout_alignParentRight="true"
            android:ems="2"                      
            android:lines="1"
            android:paddingLeft="12dp" 
            android:inputType="number"
            android:visibility="gone"            
            android:hint=""/>            
                  
    </RelativeLayout>
 <View style="@style/PersonalLine" 
       android:layout_marginTop="5dp"
     />   
   
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:text="商家简介"/>
    </LinearLayout>
    
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >
         <EditText
            android:id="@+id/edt_share_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:lines="6"
            android:gravity="top"
            android:paddingLeft="12dp"
            android:background="@null"            
            android:textSize="12dp"
            android:hint="说点什么"/>
    </LinearLayout>
   
    <View style="@style/PersonalLine" />
   
    </LinearLayout>
    
  
  <Button
        android:id="@+id/share_first_upload"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="#00BFFF"
        android:textColor="#fff"        
        android:text="进入下一步"
        android:textSize="16sp" />

</LinearLayout>
</ScrollView>