<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BFFF"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <ImageView
        android:id="@+id/weather_cur_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
         <TextView
        android:id="@+id/weather_cur_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/weather_cur_img"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text=""         
            />    
      />
     </RelativeLayout>
      
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:layout_marginTop="8dp"  
        android:orientation="horizontal" >
      <ImageView
        android:id="@+id/weather_cur_regin_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/icon_gcoding"            
            />
         <TextView
        android:id="@+id/weather_cur_regin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_cur_regin_img"
        android:layout_marginLeft="3dp"        
        android:textColor="@color/white"        
        android:text=""         
            />                
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:layout_marginTop="8dp"   >
      <TextView
        android:id="@+id/weather_cur_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"        
        android:text=""  
        android:textSize="25dp"
        android:textColor="@color/white"          
            />
        </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:layout_marginTop="8dp"   >
      <TextView
        android:id="@+id/weather_cur_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"        
        android:text="努力获取中"  
        android:textSize="16dp"
        android:textColor="@color/white"          
            />
        </RelativeLayout>        
        
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:layout_marginTop="8dp"   >
      <TextView
        android:id="@+id/weather_cur_wash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"        
        android:text=""  
        android:textSize="20dp"
        android:textColor="@color/white"          
            />
        </RelativeLayout>     
        
            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:layout_marginTop="8dp"   >
      <TextView
        android:id="@+id/weather_cur_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"        
        android:text=""  
        android:textSize="12dp"
        android:textColor="@color/white"          
            />
        </RelativeLayout>     
        
        
    </LinearLayout>

    
    
    
</LinearLayout>
