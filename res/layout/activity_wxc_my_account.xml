<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
<LinearLayout
        android:id="@+id/ll_my_account_parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" />
<View style="@style/PersonalLine" />


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" >
  <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:orientation="horizontal" >
         <TextView
             android:id="@+id/my_account_pay_date_title"    
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="50dp"
             android:textSize="12dp"
             android:textStyle="bold"
             android:textColor="#666666"
             android:text="总计消费" />
          <TextView
             android:id="@+id/my_account_pay_date"              
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginRight="80dp"
             android:textSize="12dp"
             android:textStyle="bold"
             android:textColor="#666666"             
             android:text="3次" />
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"         
         android:orientation="horizontal" >
         <TextView
             android:id="@+id/my_account_pay_name"         
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="50dp"          
             android:textSize="12dp"
             android:textStyle="bold"
             android:textColor="#666666"                          
             android:text="总共消费" />
          <TextView
             android:id="@+id/my_account_pay_name_price"                 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:layout_marginRight="80dp"    
             android:textSize="12dp"
             android:textStyle="bold"        
             android:textColor="#666666"                  
             android:text="30元" />
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"         
         android:orientation="horizontal" >
         <TextView
             android:id="@+id/my_account_pay_voucher_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="50dp"            
             android:textSize="12dp"
             android:textStyle="bold"             
             android:textColor="#666666"             
             android:text="代金券消费" />
          <TextView
             android:id="@+id/my_account_pay_voucher_str"              
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:layout_marginRight="80dp"   
             android:textSize="12dp"
             android:textStyle="bold"           
             android:textColor="#666666"               
             android:text="30元" />
     </RelativeLayout>
             <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"         
         android:orientation="horizontal" >
         <TextView
             android:id="@+id/my_account_pay_pay_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="50dp"             
             android:textSize="12dp"
             android:textStyle="bold"             
             android:textColor="#666666"             
             android:text="在线支付" />
          <TextView
             android:id="@+id/my_account_pay_pay"              
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:layout_marginRight="80dp"   
             android:textSize="12dp"
             android:textStyle="bold"    
             android:textColor="#666666"                      
             android:text="30元" />
     </RelativeLayout>
     </LinearLayout>
<View style="@style/BlankingLine" />

 
  <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" >
 <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:orientation="horizontal" >
          <ImageView
         android:id="@+id/my_account_online_img_zhifubao"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_marginLeft="20dp"
         android:src="@drawable/zhifubao" />
         <TextView    
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/my_account_online_img_zhifubao"
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             android:textSize="14dp"
             android:textStyle="bold"
             android:textColor="#666666"             
             android:text="支付宝在线支付" />
         
         <Button
	         android:id="@+id/my_account_online_zhifubao_check"
             android:layout_width="80dp"
             android:layout_height="25dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"             
             android:layout_marginRight="30dp" 
             android:background="#00BFFF"
             android:gravity="center"
             android:text="立即绑定"
             android:textColor="#fff"
             android:textSize="14dp"              
             />
 
     </RelativeLayout>
<RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:orientation="horizontal" >
          <ImageView
         android:id="@+id/my_account_online_img_weixin"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_marginLeft="20dp"
         android:src="@drawable/weixin" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/my_account_online_img_weixin"
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             android:textSize="14dp"
             android:textStyle="bold"
             android:textColor="#666666"             
             android:text="微信在线支付" />
         
         <Button
	         android:id="@+id/my_account_online_weixin_check"
             android:layout_width="80dp"
             android:layout_height="25dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"             
             android:layout_marginRight="30dp" 
             android:background="#00BFFF"
             android:gravity="center"
             android:text="立即绑定"
             android:textColor="#fff"
             android:textSize="14dp"             
             />
 
     </RelativeLayout>
          
  <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:orientation="horizontal" >
          <ImageView
         android:id="@+id/my_account_online_img_yinlian"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_marginLeft="20dp"
         android:src="@drawable/yinlian" />
         <TextView  
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/my_account_online_img_yinlian"
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             android:textSize="14dp"
             android:textStyle="bold"
             android:textColor="#666666"             
             android:text="银联在线支付" />
         
         <Button
	         android:id="@+id/my_account_online_check_yinlian"
             android:layout_width="80dp"
             android:layout_height="25dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"             
             android:layout_marginRight="30dp"
             android:background="#00BFFF"
             android:gravity="center"
             android:text="立即绑定"
             android:textColor="#fff"
             android:textSize="14dp"             
             
              />
 
     </RelativeLayout>
  
     </LinearLayout>
     
  <View style="@style/BlankingLine" />
</LinearLayout>
